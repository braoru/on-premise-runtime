apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: elasticsearch-client
spec:
  podManagementPolicy: Parallel
  serviceName: elasticsearch-client
  replicas: {{ replicas }}
  selector:
    matchLabels:
      app: elasticsearch
      role: client
  template:
    metadata:
      annotations:
        seccomp.security.alpha.kubernetes.io/pod: docker/default
      labels:
        app: elasticsearch
        role: client
    spec:
      containers:
      - image: {{ image_name }}
        imagePullPolicy: Never
        name: elasticsearch
        ports:
        - containerPort: 9200
          name: http
        - containerPort: 9300
          name: transport
        volumeMounts:
        - name: tmp
          mountPath: /tmp
        - name: run
          mountPath: /run
        - name: cgroups
          mountPath: /sys/fs/cgroup
          readOnly: true
        - name: config
          mountPath: /etc/elasticsearch/elasticsearch.yml
          subPath: elasticsearch.yml
      volumes:
      - name: run
        emptyDir:
          medium: Memory
      - name: tmp
        emptyDir:
          medium: Memory
      - name: cgroups
        hostPath:
          path: /sys/fs/cgroup
      - name: config
        configMap:
          name: elasticsearch-client
