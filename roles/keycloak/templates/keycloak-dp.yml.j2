apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ base_name }}
spec:
  podManagementPolicy: Parallel
  serviceName: {{ base_name }}
  replicas: {{ replicas }}
  selector:
    matchLabels:
      app: {{ base_name }}
  template:
    metadata:
      annotations:
        seccomp.security.alpha.kubernetes.io/pod: docker/default
      labels:
        app: {{ base_name }}
    spec:
      containers:
      - image: {{ image_name }}
        imagePullPolicy: Never
        name: {{ base_name }}
        args:
          - "/sbin/init"
          - "--log-level=debug"
          - "--log-target=journal"
        ports:
          - containerPort: 80
            name: http
        volumeMounts:
        - name: tmp
          mountPath: /tmp
        - name: run
          mountPath: /run
        - name: cgroups
          mountPath: /sys/fs/cgroup
          readOnly: true
        - name: config
          mountPath: /opt/keycloak/keycloak/standalone/configuration/standalone.xml
          subPath: standalone.xml
        readinessProbe:
          httpGet:
            path: /auth
            port: 80
          initialDelaySeconds: 15
          periodSeconds: 3
      volumes:
      - name: run
        emptyDir:
          medium: Memory
      - name: tmp
        emptyDir:
          medium: Memory
      - name: cgroups
        hostPath:
          path: /sys/fs/cgroup
      - name: config
        configMap:
          name: keycloak
