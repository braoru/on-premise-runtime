# Flanneld configuration options

# etcd url location.  Point this to the server where etcd runs
FLANNEL_ETCD="{% for node in groups['etcd'] %}http://{{ hostvars[node]['ansible_' + interface]['ipv4']['address'] }}:{{ etcd_client_port }}{% if not loop.last %},{% endif %}{% endfor %}"
FLANNEL_ETCD_KEY="/{{ cluster_name }}/network"

FLANNEL_ETCD_ENDPOINTS="{% for node in groups['etcd'] %}http://{{ hostvars[node]['ansible_' + interface]['ipv4']['address'] }}:{{ etcd_client_port }}{% if not loop.last %},{% endif %}{% endfor %}"
FLANNEL_ETCD_PREFIX="/{{ cluster_name }}/network"